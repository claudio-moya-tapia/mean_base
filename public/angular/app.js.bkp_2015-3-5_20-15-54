/** * AngularJS main app * @name angularApp standard name * @param {AngularUIRouter} ui.router module for url route manager * @param {InfiniteScroll} infinite-scroll infinite scroll to load more content * @param {BlueImpFileUpload} blueimp.fileupload file uploader */var app = angular.module('angularApp', [    'ui.router',    'infinite-scroll',    'blueimp.fileupload']);/** * AngularJS app configuration * @param {stateProvider} $stateProvider State Manager for urls (ui.router) * @param {urlRouterProvider} $urlRouterProvider Watch the $location (ui.router) */app.config(function($stateProvider, $urlRouterProvider) {    /**     * Automatic $stateProvider manager     */    var method = '';    var state = '';    var url = '';    var templateUrl = '';    var provider = '';    var aryMethod = new Array();        var aryProvider = [        'index'    ];        for (var i in aryProvider) {        provider = aryProvider[i];        switch (provider) {            case 'index':                aryMethod = ['home'];                break;            default :                aryMethod = ['index', 'list', 'new', 'view', 'edit', 'delete'];                break;        }        for (var x in aryMethod) {            method = aryMethod[x];            switch (method) {                case 'home':                    url = '/' + method;                    break;                case 'index':                    url = '/' + provider;                    break;                case 'list':                    url = '/' + provider + '/' + method;                    break;                case 'view':                    url = '/' + provider + '/:id';                    break;                case 'new':                    url = '/' + provider + '/' + method;                    break;                case 'edit':                    url = '/' + provider + '/' + method + '/:id';                    break;                case 'delete':                    url = '/' + provider + '/' + method + '/:id';                    break;            }            templateUrl = provider + '/' + method;            state = provider.replace(/\W+(.)/g, function(x, chr) {                return chr.toUpperCase();            });            state = state.charAt(0).toUpperCase() + state.slice(1);            state += method.charAt(0).toUpperCase() + method.slice(1);            $stateProvider.state(state, {                url: url,                templateUrl: templateUrl,                controller: state            });        }    }    $urlRouterProvider.otherwise('home');});/** * AngularJS app init * @param {$state} $state Transitioning to a new state (ui.router) */app.run(function($state) {    $state.go('IndexHome');});